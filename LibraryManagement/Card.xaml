<UserControl x:Class="Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Carrel"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextElement.FontFamily="Roboto"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}" Height="305" Width="424">

    <!--Change Defaults-->
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="FontFamily" Value="roboto"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="materialDesign:PackIcon">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <Style TargetType="Rectangle">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Width" Value="324"/>
            <Setter Property="Fill" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Grid.ColumnSpan" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </UserControl.Resources>

   
    <Grid>
        <!--#region Coloumn and Rows Definition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Phone-->
        <materialDesign:PackIcon Kind="Phone" 
                                 Grid.Column="2" 
                                 Grid.Row="4" 
                                 Margin="0,0,16,12"/>
        <Label x:Name="LblPhone"
                 Width="141"
                 Margin="0,0,10,0"
                 Grid.Column="3" 
                 Grid.Row="4"/>
        <!--#endregion-->


        <!--#region Department-->
        <materialDesign:PackIcon x:Name="DeptIcon"
                                 Kind="School" 
                                 Grid.Column="2"
                                 Grid.Row="3" 
                                 Margin="0,0,16,12" />
        <Label x:Name="LblDepartment"
                 Width="86"
                 Margin="0,0,65,0"
                 Grid.Column="3" 
                 Grid.Row="3" />
        <!--#endregion-->

        <!--#region Semester-->
        <Label x:Name="LblSemester"
                 Width="40"
                 Margin="0,0,10,0"
                 Grid.Column="3" Grid.Row="3"/>
        <!--#endregion-->

        <!--#region Name-->
        <Label x:Name="LblName" 
                 Width="231"
                 FontSize="18"
                 FontWeight="Bold"
                 Margin="0,0,10,10"
                 Grid.ColumnSpan="3" 
                 Grid.Column="2" 
                 Grid.Row="2" 
                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
        <!--#endregion-->
        
        <!--#region Category-->
        <Label x:Name="LblCat"
               Width="100"
               Margin="0,0,24,10"
               Grid.Row="1" 
               Grid.Column="1"
               FontSize="14"
               FontWeight="Bold" />
        <!--#endregion-->
        
        <!--#region UID-->
        <Label x:Name="LblUID"
                 Width="100"
                 Margin="0,0,24,0"
                 Grid.Row="5" 
                 Grid.Column="1"
                 FontSize="14"
                 FontWeight="Bold" />
        <!--#endregion-->

        <!--#region QR-->
        <Image x:Name="ImgQR" 
               Width="150" 
               Height="150" 
               Grid.RowSpan="3" 
               Grid.Column="1" 
               Grid.Row="2" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom" />
        <!--#endregion-->

        <!--#region Borders-->
        <Rectangle 
                   Grid.ColumnSpan="5" 
                   Width="424" Height="15" Margin="0,0,0,1"/>
        <Rectangle Grid.Row="6" 
                   Margin="0,0,0,7" 
                   Grid.ColumnSpan="5" 
                   Fill="{DynamicResource SecondaryAccentBrush}"
